html,body{
	min-width: 320px;
 	margin: 0px !important; padding: 0px !important; border: 0px !important; 
	/*height: 100%;*/
	/*height: 100%;*/
}
body{

	/*position: fixed;*/
	color: darkslategray;
	background: linear-gradient(to right, lightcyan,lavender);
}

div.deck {
	display: list-item;
	max-width: 100%;
	list-style-image: none;
	list-style-type: none;
	/*position: relative;*/
	padding: 20px;
	margin: 0px;
	margin-bottom: 50px;
	background-color: lightseagreen;
	border: 5px;
	border-style: solid;
	border-radius: 20px;
	background-origin: border-box;
 	list-style-position: outside; 
}
div.container{
 	margin: 0px !important; padding: 0px !important; border: 0px !important; 
}
.category{
	list-style-image: none;
	list-style-type: none;
	/*position: absolute;*/
	/*left : 10px;*/
}
ul,li {
	margin-left: 2%;
	padding-left: 2%;	/**/
	margin-right: 4%;
}
div{
	/*margin: 0px !important; border: 0px !important;*/
	 padding: 5px;
	 margin:5px;
}
div,p{
	word-break:break-all;
}



table.list{
	border : 0px solid black;
	border-collapse : collapse;
	border-radius : 20px !important;
	padding : 0px !important;
	margin : 0px !important;
}

tbody{
	margin: 0px !important; padding: 0px !important; border: 0px !important;}

tr{
	margin:0px !important;
	border:0px;
	padding: 5px;
	color: lightsalmon;
}

tr:nth-child(2n){
	background-color:  lightsteelblue;
	color: black;	
}
td{
		padding-left: 5px;	
}

